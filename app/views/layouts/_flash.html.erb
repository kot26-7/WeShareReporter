<% if flash[:notice] %>
  <div class='flash notice row'>
    <div class="col s10">
      <p><%= notice %></p>
    </div>
    <div class="close-zone col s2">
      <i class="medium material-icons">close</i>
    </div>
  </div>
<% end %>

